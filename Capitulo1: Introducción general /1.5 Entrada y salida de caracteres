/* 5.1 Copia de archivos  */                  /*ctrl z windows para terminar el archivo (EOF)*/

#include <stdio.h>
/* Copia la entrada y la salida;  */
main()
{
	int c;

	c = getchar();
	while (c != EOF) {
		putchar(c);
		c = getchar();

	}
}
+++++++++++++++++++++++++++++++++++++++++++

 /* 5.2 Conteo de caracteres */             
#include <stdio.h>
/*Cuenta los caracteres de la entrada*/
main()
{
	long nc;

	nc = 0;
	while (getchar() != EOF)
	++nc;
	printf("%ld\n", nc);
	}
++++++++++++++++++++++++++++++++++++++++++

/* 5.3 conteo de lineas*/
#include <stdio.h>

/*Cuentas las l√≠neas de la entrada*/

main()
{
	int c, ni;

	ni = 0;
	while ((c = getchar()) != EOF)
		if (c == '\n')
			++ni;
	printf("%d\n", ni);

}
++++++++++++++++++++++++++++++++++++++++
/* 5.4 Conteo de palabras*/                        
#include <stdio.h>

#define IN 1 /*En una palabra*/
#define OUT 0 /*Fuera de una palabra*/

/*cuenta lineas, palabras, y caracteresde entrada  */
main() 
{
	int c, ni, nw, nc, state;
	state = OUT; 
	ni = nw = nc = c = 0;
	while ((c = getchar()) != EOF) {
		++nc;
		if (c == '\n')
			++ni;
		if (c == ' ' || c == '\n' || c == '\t')  
			state = OUT;
		else if (state == OUT) {
			state = IN;
			++nw;
		}
	}
	printf("%d %d %d\n", ni, nw, nc);
	return 0;
}
