#define _CRT_SECURE_NO_WARNINGS

#include <stdio.h>
char nombre[15];
int sexo, edad;


 main()
{

	printf("Digite el nombre:");
	scanf("%s", &nombre);
	printf("Digite sexo (M=1,F=2):");
	scanf("%d", &sexo);
	printf("Digite edad:");
	scanf(" %d", &edad); 
	if (sexo == 1)
		if (edad >= 18)
			printf("El nombre es:%s\n", nombre);
	printf("Presione <ENTER> PARA TERMINAR \n"); 
		getch();
	return(0);
}
